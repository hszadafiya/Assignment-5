<div class="container">
    <h2>Courses</h2>
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Code</th>
                <th>Course Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{this.courseId}}</td>
                <td>{{this.courseCode}}</td>
                <td>{{this.courseDescription}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No courses found</p>
    {{/if}}
</div>
