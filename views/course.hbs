<div class="container">
    <h2>Course Details</h2>
    {{#if course}}
    <table>
        <tr>
            <th>Course ID</th>
            <td>{{course.courseId}}</td>
        </tr>
        <tr>
            <th>Course Code</th>
            <td>{{course.courseCode}}</td>
        </tr>
        <tr>
            <th>Course Description</th>
            <td>{{course.courseDescription}}</td>
        </tr>
    </table>
    {{else}}
    <p>No course details found</p>
    {{/if}}
</div>
